{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "public/*": [
        "src/public/*"
      ],
      "ipretty/*": [
        "src/ipretty/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
